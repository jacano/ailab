<UserControl x:Class="SnipInsight.Views.ProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ari="clr-namespace:SnipInsight.Controls.Ariadne"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="Transparent">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Background="#3075bb" Padding="30">
            <Grid>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock  Name="Notification_Message"
                                TextAlignment="Left"
                                FontSize="16"
                                Margin="0,0,0,30"
                                Foreground="White"
                                TextWrapping="Wrap"
                                Text="Processing" >
                    </TextBlock>
                    <ari:AriProgressBar x:Name="Progress_Bar"
                          Height="3"
                          MinWidth="300">
                    </ari:AriProgressBar>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
